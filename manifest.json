{
    "manifest_version": 3,
    "name": "Selected Text Reader",
    "version": "1.0",
    "description": "Read the selected text from the currently active tab.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }